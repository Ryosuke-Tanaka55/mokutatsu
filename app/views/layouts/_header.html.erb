<!-- ナビゲーションバー -->
<header class="navbar navbar-fixed-top", id="top-bar">
  <div class="container">
    <%= link_to "MOKU TATSU", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right", id="menu-bar">
        <li>
          <%= link_to root_path, method: :get do %>
            <i class="fas fa-home fa-lg"></i>
          <% end %>
        </li>
        <% if logged_in? %>
          <li><%= link_to  "マイページ", current_user %></li>
          <li>
            <% if unchecked_notifications.any? %>
              <%= link_to user_posts_path(current_user), method: :get do %>
                投稿<i class="fa fa-circle fa-fw fa-xs" style="color: gold; bottom: 5px;"></i>
              <% end %>
            <% else %>
              <%= link_to  "投稿", user_posts_path(current_user) %>
            <% end %>
          </li>
          <li><%= link_to "ユーザー", users_path %></li>
          <li><%= link_to  "ゴール", user_goals_path(current_user) unless current_user.admin? %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="fas fa-user fa-lg"></i><b class="caret"></b>
            </a>
            <ul class="dropdown-menu", id="dropdown-menu-bar">
              <li><%= link_to "マイページ", current_user unless current_user.admin? %></li>
              <li><%= link_to "ユーザー編集", edit_user_path(current_user) %></li>
              <li class="divider"></li>
                <li><%= link_to "利用規約", rule_path, id: "rule" %></li>
                <li><%= link_to "プライバシーポリシー", policy_path, id: "policy" %></li>
                <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
