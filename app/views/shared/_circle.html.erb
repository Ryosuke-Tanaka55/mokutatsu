<%= link_to(notifications_path) do %>
  <% if unchecked_notifications.any? %>
    <span class="fa-stack">
      <i class= i.far.fa-bell.fa-lg.fa-stack-2x style="font-size: 1.5em;"></i>
      <i class= i.fas.fa-circle.n-circle.fa-stack-1x></i>
  <% else %>
    <i class= i.far.fa-bell.fa-lg style="font-size: 1.5em;"></i>
  <% end %>